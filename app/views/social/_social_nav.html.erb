<div class="profile-nav">
  <div class="sort">
    <ul class="menu tab">
      <li>
        <%= link_to wall_person_path(@person.username), class: "#{'current' if action_name == 'wall' }" do %>
            <b>Wall</b>
        <% end %>
      </li>

      <li>
        <%= link_to timelets_person_path(@person.username), class: "#{'current' if action_name == 'timelets' }" do %>
            <b>Timelets</b>
            <span><%= timelets %></span>
        <% end %>
      </li>

      <li>
        <%= link_to reviews_person_path(@person.username), class: "#{'current' if action_name == 'reviews' }" do %>
            <b>Reviews</b>
            <span><%= reviews %></span>
        <% end %>
      </li>

      <li>
        <%= link_to friend_person_path(@person.username), class: "#{'current' if action_name == 'friend' }" do %>
            <b>Followers</b>
            <span><%= followers %></span>
        <% end %>
      </li>
      <% if current_user?(@person) %>
          <li>
            <%= link_to person_inbox_path(@person.username), class: "#{'current' if action_name == 'show' && controller_name == 'inboxes' }" do %>
                <b>Inbox</b>
                <span><%= unread_count %></span>
            <% end %>
          </li>
      <% end %>
    </ul>
  </div>
</div>