if (<%= status %>) {
    $('.wall-posts ul.all_post li.wall-post-item:first-of-type').before("<%= escape_javascript(render(:partial => 'people/wall_post_item',  :locals => { :post => post, person: person})) %>");
    $('.wall-post-item-<%= post.id %>').effect("highlight", {}, 3000);
    $('#description, .attachment-description').val('');
    $('.close.lightbox-x').trigger('click');
}
else {
    alert("<%= message %>");
}