<li id="comment-<%= comment.id %>" style="display: list-item;">
  <div class="clearfix">
    <div class="comments-owner">
      <%= small_avatar_thumb(comment.person) %>
    </div>
    <div class="comment-text">
      <div class="post-title">
        <span class="name">
          <%= link_to comment.person.given_name_or_username, person_path(username: comment.person.username) %>
        </span>
        <i class="times"> <%= time_ago_in_words(comment.created_at) %> ago </i>
      </div>
      <p>
        <%= comment.comment %>
      </p>

      <div class="activity-footer">
        <ul class="activity-actions clearfix" style="padding-left: 0px;">
          <li class="like-comment-<%= comment.id %>">
            <%= like_unlike_link(comment, @current_user, 'comment') %>
          </li>
          <li>
            <% if current_user?(comment.person) %>
                <%= link_to comment, method: :delete, remote: true, data: {confirm: 'Are you sure?'} do %>
                    <i class="fa fa-trash"></i> Delete
                <% end %>
            <% end %>
          </li>
        </ul>
        <div style="clear: both;"></div>
      </div>
    </div>
  </div>
</li>